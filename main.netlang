set name <- "Router 1"
set router <- Router {
    name <- ~name,
    ports <- [
        CopperEthernetPort {
            portId <- "eth0",
            ip <- 192.168.1.0/24
        },
        CopperEthernetPort {
            portId <- "eth1",
            ip <- 192.168.1.1/24
        }
    ],
    routingTable <- []
}

set switch <- Switch {
    name <- "Switch 1",
    ports <- [
        CopperEthernetPort {
            portId <- "eth0"
        }
    ]
}

switch.ports<0>.ip <- 192.168.3.0/24
